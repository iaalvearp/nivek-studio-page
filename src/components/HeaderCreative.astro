<header id="home">
    <div class="sectionContainer">
        <div class="firstContainer">
            <h1>Nivek Studio</h1>
            <img class="heroPic" src="/first.jpg" alt="">
        </div>
        <div class="thirdContainer">
            <img class="heroPic" src="/third.webp" alt="">
            <h2>protect your</h2>
        </div>
        <div class="secondContainer">
