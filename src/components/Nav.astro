<script>
    const toggleClosed = document.getElementById('toggleClosed');
    const toggleOpen = document.getElementById('toggleOpen');
    const navMenu = document.getElementById('navMenu');

    toggleClosed.addEventListener('click', ()=>{
        toggleClosed.classList.replace('scale-100','scale-0');
        toggleClosed.classList.replace('opacity-100','opacity-0');
        toggleOpen.classList.replace('scale-0','scale-100');
        toggleOpen.classList.replace('opacity-0','opacity-100');
        navMenu.classList.replace('translate-x-full','translate-x-0')
        
    });
    toggleOpen.addEventListener('click', ()=>{
        toggleOpen.classList.replace('scale-100','scale-0');
        toggleOpen.classList.replace('opacity-100','opacity-0');
        toggleClosed.classList.replace('scale-0','scale-100');
        toggleClosed.classList.replace('opacity-0','opacity-100');
        navMenu.classList.replace('translate-x-0','translate-x-full')
    })
    
</script>


