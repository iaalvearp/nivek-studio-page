<style>
    :root{
        --border-radius: 0.25rem;
    }

    section{
      width: 100%;
      min-height: 100vh;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      grid-auto-rows: 5rem repeat(auto-fill, minmax(8rem, 16rem));
      grid-auto-flow: dense;
      gap: 0.75rem;
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 0.75rem 0.75rem 0.75rem;
  }
  .titleContainer{
    grid-column: 1/-1;
    grid-row: 1/2;
    height: 5rem;
    display: grid;
    align-items: center;
    align-content: center;
    z-index: 1;
    border-radius: 8px;
    overflow: hidden;
    margin: 8px 0 0 0;
  }
  h2{
    text-align: center;
    grid-row: 1/2;
    grid-column: 1/-1;
    z-index: 1;
    font-size: 2.5rem;
    color: white;
  }
  video{
    height: 100%;
    width: 100%;grid-row: 1/2;
    grid-column: 1/-1;
    object-fit: cover;
    object-position: center;
    z-index: 0;
  }
  .artContainer {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 400ms;
    grid-column: span 1;
    grid-row: span 1;
    display: grid;
    grid-template-rows: 1fr;
  }
  .artContainer img{
    height: 100%;
    width: 100%;
    object-fit: cover;
    grid-row: 1/3;
    grid-column: 1/2;
  }
  .hoverText{
    grid-row: 2/3;
    grid-column: 1/2;
    background-color: var(--primary-color-two);
    transition: 0.3s;
  }
  .hoverTitle{
    font-size: 1.5rem;
    color: var(--secundary-color);
    padding: 0.5rem 1rem;
    transition: 0.3s;
    cursor: default;
  }
  .artContainer:hover .hoverText .hoverTitle{
    color: var(--primary-color-two);
  }
  .hoverHide{
    display: none;
    padding: 0 1rem 1rem;
    cursor: default;
  }
  .artContainer:hover .hoverText{
    grid-row: 1/3;
    z-index: 1;
    background-color: var(--light-overlay);
    backdrop-filter: blur(0.5rem);
    padding: 0.5rem;
    text-align: center;
    display: grid;
    place-content: center;
  }
  .artContainer:hover .hoverText .hoverHide{
    display: block;
    z-index: 1;
  }
  .hoverHide p{
    margin-bottom: 1.5rem;
  }
  .hoverBtn{
    padding: 0.5rem 1rem;
    text-decoration: none;
    color: var(--secundary-color);
    background-color: var(--primary-color-two);
    border-radius: 0.25rem;
    margin-top: 1rem;
  }

  @media (width > 600px){
    section{
      grid-auto-flow: dense;
      height: 100%;
      margin-bottom: 1rem;
    }
    .spanColumn {
      grid-column: span 2;
      grid-row: span 1;
    }
    .spanRow {
      grid-row: span 2;
      grid-column: span 1;

    }  
  }
    
</style>